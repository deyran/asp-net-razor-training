@page
@model IndexModel

@{
    Layout = null;
}

<html>
<head>

</head>
<body>
    <div>

        <ul>
            <li><a href="~/">Home</a></li>
            <li><a href="~/About">About</a></li>
            <li><a href="~/Login">Login</a></li>
        </ul>

        <table>
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Title</td>
                    <td>Price</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Categories)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>