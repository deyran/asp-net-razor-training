@page "~/Categorias/{skip?}/{take?}"
@model CategoriesModel

@{

    ViewData["Title"] = "Lista de Categoria";
}

<h1>Categoria</h1>

<table>
    <thead>
        <tr>
            <td>
                Id
            </td>
            <td>
                Title
            </td>
            <td>
                Price
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.CategoryList)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Title</td>
                <td>@category.Price.ToString(format: "C") </td>
            </tr>
        }
    </tbody>
</table>