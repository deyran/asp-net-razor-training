@page
@model MyRazorApp.Pages.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>Categories</h1>

    <ul>
        <li>
            <a href="~/">Home</a>
        </li>
        <li>
            <a href="~/About">About</a>
        </li>
        <li>
            <a href="~/Login">Login</a>
        </li>
    </ul>

    <div>
        <table>
            <thead>
                <tr>
                    <td>
                        Id
                    </td>
                    <td>
                        Title
                    </td>
                    <td>
                        Price
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Title</td>
                        <td>@category.Price.ToString(format: "C") </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>